{
    "name": "HiAnime",
    "version": "1.0.8",
    "author": {
        "name": "sobet",
        "website": "https://google.com"
    },
    "iconURL": "https://hianime.to/images/logo.png",
    "stream": "HLS",
    "language": "EN",
    "extractor": "pattern-hls",
    "module": [
        {
            "search": {
                "url": "https://hianime.to/search",
                "parameter": "keyword",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "featured": {
                "url": "https://hianime.to",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "details": {
                "baseURL": "https://hianime.to",
                "aliases": {
                    "selector": "h2.film-name",
                    "attribute": "text"
                },
                "synopsis": "div.film-description",
                "airdate": "span:contains('Released:')",
                "stars": "span:contains('Rating:')"
            },
            "episodes": {
                "script": [
                    {
                        "type": "text/javascript",
                        "code": "(() => { \n" +
                                "let episodes = [];\n" +
                                "const episodeLinks = document.querySelectorAll('div#episodes-page-1 div.episodes-ul a');\n" +
                                "episodeLinks.forEach(link => {\n" +
                                "   let episode = {};\n" +
                                "   episode.title = link.querySelector('a').textContent.trim();\n" +
                                "   episode.href = link.href;\n" +
                                "   episodes.push(episode);\n" +
                                "});\n" +
                                "return episodes;\n" +
                                "})();"
                    }
                ]
            },
            "video": {
                "selector": "div#player iframe",
                "url": {
                    "attribute": "src",
                    "prefix": "https://hianime.to"
                }
            }
        }
    ]
}
