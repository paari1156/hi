{
    "name": "HiAnime",
    "version": "1.0.9",
    "author": {
        "name": "sobet",
        "website": "https://google.com"
    },
    "iconURL": "https://hianime.to/images/logo.png",
    "stream": "HLS",
    "language": "EN",
    "extractor": "pattern-hls",
    "module": [
        {
            "search": {
                "url": "https://hianime.to/search",
                "parameter": "keyword",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "featured": {
                "url": "https://hianime.to",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "details": {
                "baseURL": "https://hianime.to",
                "aliases": {
                    "selector": "h2.film-name",
                    "attribute": "text"
                },
                "synopsis": "div.film-description",
                "airdate": "span:contains('Released:')",
                "stars": "span:contains('Rating:')"
            },
            "episodes": {
                "script": [
                    {
                        "type": "text/javascript",
                        "code": "(() => {\n" +
                                "    let episodes = [];\n" +
                                "    fetch(window.location.href)\n" +
                                "        .then(response => response.text())\n" +
                                "        .then(html => {\n" +
                                "            let parser = new DOMParser();\n" +
                                "            let doc = parser.parseFromString(html, 'text/html');\n" +
                                "            let episodeLinks = doc.querySelectorAll('div#episodes-page-1 div.episodes-ul a');\n" +
                                "            episodeLinks.forEach(link => {\n" +
                                "                let episode = {};\n" +
                                "                episode.title = link.textContent.trim();\n" +
                                "                episode.href = link.href;\n" +
                                "                episodes.push(episode);\n" +
                                "            });\n" +
                                "            return episodes;\n" +
                                "        })\n" +
                                "        .catch(error => { console.error('Error loading episodes:', error); });\n" +
                                "    return episodes;\n" +
                                "})();"
                    }
                ]
            },
            "video": {
                "selector": "div#player iframe",
                "url": {
                    "attribute": "src",
                    "prefix": "https://hianime.to"
                }
            }
        }
    ]
}
