{
    "name": "HiAnime",
    "version": "1.0.4",
    "author": {
        "name": "sobet",
        "website": "https://google.com"
    },
    "iconURL": "https://hianime.to/images/logo.png",
    "stream": "HLS",
    "language": "EN",
    "extractor": "pattern-hls",
    "module": [
        {
            "search": {
                "url": "https://hianime.to/search",
                "parameter": "keyword",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "featured": {
                "url": "https://hianime.to",
                "documentSelector": "div.flw-item",
                "title": "h3.film-name > a",
                "image": {
                    "url": "img.film-poster-img",
                    "attribute": "data-src"
                },
                "href": "h3.film-name > a"
            },
            "details": {
                "baseURL": "https://hianime.to",
                "aliases": {
                    "selector": "h2.film-name",
                    "attribute": "text"
                },
                "synopsis": "div.film-description",
                "airdate": "span:contains('Released:')",
                "stars": "span:contains('Rating:')"
            },
            "episodes": {
                "selector": "div.episodes-page div.episodes-ul > li > a",
                "order": "ordered",
                "href": {
                    "attribute": "href",
                    "prefix": "https://hianime.to"
                }
            },
            "video": {
                "baseURL": "",
                "script": "async function fetchVideoURL(url) { const response = await fetch(url); const html = await response.text(); const parser = new DOMParser(); const doc = parser.parseFromString(html, 'text/html'); const videoPattern = /https:\\/\\/.*?\\.(m3u8|mp4)(\\?token=.*?)?/g; const matches = html.match(videoPattern); return matches ? matches[0] : null; }"
            }
        }
    ]
}
